<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:file:./data/fiscal;DB_CLOSE_ON_EXIT=FALSE</property>
        <property name="hibernate.connection.username">SA</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="connection_pool_size">100</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>

        <mapping class="br.indie.fiscal.model.NFeEntity"/>
        <mapping class="br.indie.fiscal.model.NFCeEntity"/>
        <mapping class="br.indie.fiscal.model.ContingencyEntity"/>
        <mapping class="br.indie.fiscal.model.MDFeEntity"/>

    </session-factory>
</hibernate-configuration>